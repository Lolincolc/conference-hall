{
  "private": true,
  "name": "conference-hall-remix",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run css:generate -- --minify",
    "build:remix": "remix build",
    "dev": "npm run db:migrate:dev && run-p dev:*",
    "dev:css": "npm run css:generate -- --watch",
    "dev:remix": "dotenv -e .env.dev -- remix dev",
    "test:unit": "npm run db:migrate:test && dotenv -e .env.test -- jest -i",
    "test:server": "npm run db:migrate:test && run-p test:server:*",
    "test:server:css": "npm run css:generate -- --watch",
    "test:server:remix": "dotenv -e .env.test -- remix dev",
    "test:cypress:open": "dotenv -e .env.test -- cypress open",
    "test:cypress:run": "dotenv -e .env.test -- cypress run",
    "db:studio": "dotenv -e .env.dev -- prisma studio",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset",
    "db:migrate:dev": "dotenv -e .env.dev -- prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- prisma migrate dev",
    "css:generate": "tailwindcss -o ./app/tailwind.css",
    "tsc": "tsc -b"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.4",
    "@heroicons/react": "^1.0.6",
    "@prisma/client": "^3.15.2",
    "@remix-run/node": "^1.6.0",
    "@remix-run/react": "^1.6.0",
    "@remix-run/serve": "^1.6.0",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "firebase": "^9.8.3",
    "firebase-admin": "^11.0.0",
    "limax": "^3.0.0",
    "marked": "^4.0.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "^1.6.0",
    "xss": "^1.0.13",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@ngneat/falso": "^5.7.0",
    "@remix-run/dev": "^1.6.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.2",
    "@types/marked": "^4.0.3",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/uuid": "^8.3.4",
    "cypress": "^10.1.0",
    "dotenv-cli": "^5.1.0",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.3.3",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.15.2",
    "tailwindcss": "^3.1.3",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=14"
  },
  "jest": {
    "projects": [
      "./jest.node.config.js",
      "./jest.react.config.js"
    ]
  },
  "sideEffects": false
}
