{
  "private": true,
  "name": "conference-hall-remix",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run css:generate -- --minify",
    "build:remix": "remix build",
    "dev": "npm run db:migrate:dev && run-p dev:*",
    "dev:css": "npm run css:generate -- --watch",
    "dev:remix": "dotenv -e .env.dev -- remix dev",
    "test": "run-s db:migrate:test test:unit",
    "test:unit": "dotenv -e .env.test -- vitest --no-threads",
    "test:server": "npm run db:migrate:test && run-p test:server:*",
    "test:server:css": "npm run css:generate -- --watch",
    "test:server:remix": "dotenv -e .env.test -- remix dev",
    "cypress:open": "start-server-and-test test:server http://localhost:3001 'dotenv -e .env.test -- cypress open'",
    "cypress:run": "start-server-and-test test:server http://localhost:3001 'dotenv -e .env.test -- cypress run'",
    "db:studio": "dotenv -e .env.dev -- prisma studio",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset",
    "db:migrate:dev": "dotenv -e .env.dev -- prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- prisma db push --accept-data-loss",
    "css:generate": "tailwindcss -o ./app/tailwind.css",
    "tsc": "tsc -b"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@prisma/client": "^4.0.0",
    "@remix-run/node": "^1.6.5",
    "@remix-run/react": "^1.6.5",
    "@remix-run/serve": "^1.6.5",
    "@vitejs/plugin-react": "^2.0.0",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "firebase": "^9.9.0",
    "firebase-admin": "^11.0.0",
    "happy-dom": "^6.0.4",
    "limax": "^3.0.0",
    "marked": "^4.0.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "^1.6.5",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.19.0",
    "xss": "^1.0.13",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@ngneat/falso": "^6.0.3",
    "@remix-run/dev": "^1.6.5",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/marked": "^4.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/uuid": "^8.3.4",
    "cypress": "^10.3.0",
    "dotenv-cli": "^6.0.0",
    "esbuild-register": "^3.3.3",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.0.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.6",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
