{
  "private": true,
  "name": "conference-hall-remix",
  "description": "",
  "license": "MIT",
  "scripts": {
    "dev": "npm run db:migrate && concurrently \"npm run dev:css\" \"npm run dev:remix\"",
    "dev:remix": "dotenv -e .env.dev -- remix dev",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "dev:typecheck": "tsc -b",
    "db:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset",
    "db:studio": "dotenv -e .env.dev -- prisma studio",
    "test": "npm run test:db:migrate && dotenv -e .env.test -- jest -i",
    "test:server": "npm run test:db:migrate && concurrently \"npm run dev:css\" \"npm run test:remix\"",
    "test:remix": "dotenv -e .env.test -- remix dev",
    "test:db:migrate": "dotenv -e .env.test -- prisma migrate dev",
    "test:cypress:open": "dotenv -e .env.test -- cypress open",
    "test:cypress:run": "dotenv -e .env.test -- cypress run",
    "prod:start": "remix-serve build",
    "prod:build": "remix build",
    "prod:build:css": "tailwindcss -o ./app/tailwind.css",
    "postinstall": "remix setup node"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.1",
    "@heroicons/react": "^1.0.6",
    "@prisma/client": "^3.14.0",
    "@remix-run/react": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "firebase": "^9.8.1",
    "firebase-admin": "^10.2.0",
    "limax": "^3.0.0",
    "marked": "^4.0.15",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "remix": "^1.4.3",
    "xss": "^1.0.11",
    "zod": "^3.16.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.3",
    "@tailwindcss/forms": "^0.5.1",
    "@tailwindcss/typography": "^0.5.2",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^27.5.1",
    "@types/marked": "^4.0.3",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.2.0",
    "cypress": "^9.6.1",
    "dotenv-cli": "^5.1.0",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.3.2",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "prisma": "^3.14.0",
    "tailwindcss": "^3.0.24",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=14"
  },
  "jest": {
    "projects": [
      "./jest.node.config.js",
      "./jest.react.config.js"
    ]
  },
  "sideEffects": false
}
