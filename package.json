{
  "private": true,
  "name": "conference-hall-remix",
  "description": "",
  "license": "MIT",
  "scripts": {
    "dev": "npm run db:migrate && concurrently \"npm run dev:css\" \"npm run dev:remix\"",
    "dev:remix": "dotenv -e .env.dev -- remix dev",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "db:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset",
    "db:studio": "dotenv -e .env.dev -- prisma studio",
    "test": "dotenv -e .env.test -- jest -i",
    "test:server": "npm run test:db:migrate && concurrently \"npm run dev:css\" \"npm run test:remix\"",
    "test:remix": "dotenv -e .env.test -- remix dev",
    "test:db:migrate": "dotenv -e .env.test -- prisma migrate dev",
    "test:cypress:open": "dotenv -e .env.test -- cypress open",
    "test:cypress:run": "dotenv -e .env.test -- cypress run",
    "prod:start": "remix-serve build",
    "prod:build": "remix build",
    "prod:build:css": "tailwindcss -o ./app/tailwind.css",
    "postinstall": "remix setup node"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@prisma/client": "^3.5.0",
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "classnames": "^2.3.1",
    "date-fns": "^2.27.0",
    "dotenv": "^10.0.0",
    "firebase": "^9.5.0",
    "firebase-admin": "^10.0.0",
    "limax": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@tailwindcss/forms": "^0.3.4",
    "@testing-library/cypress": "^8.0.2",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "^8.3.3",
    "concurrently": "^6.4.0",
    "cypress": "^9.1.0",
    "dotenv-cli": "^4.1.1",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.2.0",
    "jest": "^27.4.2",
    "prisma": "^3.5.0",
    "tailwindcss": "^2.2.19",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.1.2",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
